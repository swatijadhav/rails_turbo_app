<% if @user.errors.present? %>
  <%= notice_stream(message: :error, status: 'red') %>
  <%= form_user_stream(user: @user) %>
<% else %>
  <%= notice_stream(message: :create, status: 'green') %>

  <%= turbo_stream.replace :new_user do %>
    <%= turbo_frame_tag :new_user %>
  <% end %>

   <%= turbo_stream.prepend 'users', partial: 'user', locals: { user: @user } %>
<% end %>
